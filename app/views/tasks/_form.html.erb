<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <!-- Taskモデルだが、'full_messages'だけはセットでRubyのデフォルト構文？になるため、'full_tasks'としてはいけない -->
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :status, 'ステータス：　' %>
  <%= f.text_field :status %>
<br>
<br>
  <%= f.label :content, 'タスク：　' %>
  <%= f.text_field :content %>

  <%= f.submit '登録' %>
<% end %>